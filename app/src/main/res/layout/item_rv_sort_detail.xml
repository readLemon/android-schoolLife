<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sort_detail_pic"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_image_food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sort_detail_name"
        android:text="零食"
        app:layout_constraintTop_toBottomOf="@+id/iv_sort_detail_pic"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/iv_sort_detail_pic"
        app:layout_constraintStart_toStartOf="@id/iv_sort_detail_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>