<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_main_rv_product_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/image_cup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_main_rv_title"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        tools:text ="三十三岁三十三岁三十三岁三十三岁三十三岁三十三"
        app:layout_constraintStart_toStartOf="@+id/iv_main_rv_product_pic"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_rv_product_pic"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_main_rv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FD0000"
        app:layout_constraintStart_toStartOf="@+id/tv_main_rv_title"
        android:layout_marginTop="5dp"
        tools:text="$122"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_rv_title"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_main_rv_avatar"
        app:layout_constraintStart_toStartOf="@+id/tv_main_rv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_rv_price"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_main_bottom_mine"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_main_rv_username"
        android:textSize="14sp"
        tools:text="三十三岁搜索"
        android:ellipsize="marquee"
        app:layout_constraintBottom_toBottomOf="@+id/civ_main_rv_avatar"
        app:layout_constraintTop_toTopOf="@+id/civ_main_rv_avatar"
        app:layout_constraintStart_toEndOf="@+id/civ_main_rv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>