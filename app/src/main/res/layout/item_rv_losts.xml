<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_lost_item_ic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lost_item_stu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名：xxxx"
        app:layout_constraintStart_toEndOf="@+id/iv_lost_item_ic"
        app:layout_constraintTop_toTopOf="@+id/iv_lost_item_ic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lost_item_stu_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号：2018xxxx"
        app:layout_constraintStart_toEndOf="@+id/iv_lost_item_ic"
        app:layout_constraintTop_toBottomOf="@+id/tv_lost_item_stu_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lost_item_stu_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学院：通信与信息工程学院"
        app:layout_constraintStart_toEndOf="@+id/iv_lost_item_ic"
        app:layout_constraintTop_toBottomOf="@+id/tv_lost_item_stu_num" />

</androidx.constraintlayout.widget.ConstraintLayout>